{
  "compilerOptions": {
    "jsx": "react",
    "module": "ES2015",
    "lib": [
      "ES2018",
      "DOM",
    ],
    "target": "es2015",
    "moduleResolution": "Node",
    "outDir": "lib",
    "baseUrl": "src/",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
